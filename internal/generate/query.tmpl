{{ .Compiler }} \
{{- range .Imports }}
  -I {{ . }} \
{{- end }}
{{- range .Plugins }}
  {{- $first := true -}}
  --{{ .Name }}_out={{ .Out }} \
  --{{ .Name }}_opt={{- range $k, $v := .Options }}
    {{- if $first -}}
      {{- $first = false -}}
    {{- else -}}
      ,
    {{- end -}}
    {{ $k }}={{ $v }}
  {{- end }} \
{{- end }}
{{- range .Files }}
  {{ . }} \
{{- end }}
